!!!html5
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/base/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    = haml :analytics, :layout => false
  %body{ :role => @page_role || 'page' }
    %header(role="banner")
      %hgroup
        %h1
          %a{:href => "/", :rel => "home"}= @heading
          :plain
            <span class='trade-mark'>&trade;</span>
        - if @subtitle
          %h2= @subtitle

    %section(role="main")
      = yield

    %footer(role="footer")
      %p Copyright 2010 - 2011 RIZN Media, All Rights Reserved.

