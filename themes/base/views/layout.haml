!!!html5
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %link{ :href => "/base/sass-icon.ico", :rel => "shortcut icon" }
    %title= @title
    %link{ :href => "/base/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    = haml :analytics, :layout => false
  %body{ :role => @page_role || 'page' }
  
    %header(role="banner")
      %hgroup
        .max-width
          .padding
            %h1
              %a{:href => "/", :rel => "home"}= @heading
              :plain
                <span class='trade-mark'>&trade;</span>
            - if @subtitle
              %h2= @subtitle

    %section(role="main")
      .max-width
        .padding
          = yield
  
    %nav(role="offsite")
      %ul
        %li
          %a{:href=>"http://twitter.com/thesassway"} Twitter
        %li
          %a{:href=>"http://convore.com/the-sass-way/"} Community
        %li
          %a{:href=>"http://github.com/thesassway/"} GitHub

    %footer(role="footer")
      .max-width
        .padding
          :markdown
            Copyright 2010 - 2011 [Adam Stacoviak](http://adamstacoviak.com/) and [John W. Long](http://wiseheartdesign.com/), All Rights Reserved.

