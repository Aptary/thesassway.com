!!!html5
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %link{ :href => "/base/sass-icon.ico", :rel => "shortcut icon" }
    %title= @title
    %link{ :href => "/base/css/scc.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
  %body
    = yield