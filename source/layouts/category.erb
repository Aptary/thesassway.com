<% wrap_layout 'page' do %>
  <%= yield %>
  <section class="page-articles">
    <ul>
    <% for page in children %>
      <li><%= title(page) %></li>
    <% end %>
    </ul>
    <% if false # disable for now %>
    <%= partial 'summaries', :locals => { :pages => @page.articles, :heading => :h3 } %>
    <% end %>
  </section>
<% end %>
