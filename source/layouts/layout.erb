<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <% if meta.description %><meta name="description" content="<%= meta.description %>" ><% end %>
    <% if meta.keywords %><meta name="keywords" content="<%= meta.keywords %>" ><% end %>

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= title || "The Sass Way" %></title>

    <%= stylesheet_link_tag "master" %>
    <%= javascript_include_tag  "all" %>

    <link href="/sass-icon.ico" rel="shortcut icon">
    <link href="http://feeds.feedburner.com/thesassway" rel="alternate" type="application/atom+xml">

    <!-- Roboto Condensed -->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:700,300' rel='stylesheet' type='text/css'>
  </head>
  <body class="<%= page_classes %>" role="<%= @page_role || 'page' %>">
    <div role="top-bar">
      <nav role="main-nav">
        <ul>
          <li><a href="/">Homepage</a></li>
          <li class="beginner"><a href="/beginner">Beginner</a></li>
          <li><a href="/intermediate">Intermediate</a></li>
          <li><a href="/advanced">Advanced</a></li>
          <li class="articles"><a href="/articles">Articles</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/projects">Projects</a></li>
          <li class="subscribe"><a href="http://feeds.feedburner.com/thesassway">Subscribe</a></li>
        </ul>
      </nav>
    </div>

    <header role="banner">
      <h1><a href="/" rel="home">The Sass Way</a></h1>
      <h2>The latest in Sass and Compass - Beginner, Intermediate and Advanced topics</h2>
    </header>

    <section role="main">
      <%= yield %>
    </section>

    <footer role="footer">
      <small><p><%= "Copyright 2010-#{Time.now.year} The Sass Way, All Rights Reserved." %></p></small>
    </footer>

    <%= partial 'layouts/podcasts' %>
    <%= partial 'layouts/footer' %>
    <%= partial 'layouts/footer_scripts' %>
  </body>
</html>
