<% unless pages.empty? %>
  <% pages.each do |page| %>
    <article class="post">
      <% content_tag (defined?(heading) ? heading : :h2) do %>
        <a href="<%= page.abspath %>">
          <%= page.heading %>
        </a>
      <% end %>
      <% if page.date %>
        <div class="page-date">
          <%= format_date(page.date) %>
        </div>
      <% end %>
      <% if page.summary.nil? || page.summary.empty? %>
        ~ page.body
      <% else %>
        ~ page.summary
        <p class="read-more">
          <a href="<%= page.abspath %>">
            <%= page.read_more %>
          </a>
        </p>
      <% end %>
    </article>
  <% end %>
<% end %>
